struct NoiseState {
    fnl_state noise;
};

NoiseState* init_noise_generator(int seed) {
    NoiseState* state = malloc(sizeof(NoiseState));
    if (!state) {
        perror("Error allocating NoiseState");
        return NULL;
    }
    state->noise = fnlCreateState();
    state->noise.noise_type = FNL_NOISE_OPENSIMPLEX2;
    state->noise.seed = seed;
    printf("Initialized noise generator with seed %d\n", seed);
    return state;
}

NoiseState* init_noise_generator_with_params(const NoiseParams* params) {
    if (!params) {
        fprintf(stderr, "Error: Cannot initialize noise generator with NULL params.\n");
        return NULL;
    }
    
    NoiseState* state = malloc(sizeof(NoiseState));
    if (!state) {
        perror("Error allocating NoiseState");
        return NULL;
    }
    
    state->noise = fnlCreateState();
    
    // Set basic settings
    switch (params->noise_type) {
        case NOISE_TYPE_OPENSIMPLEX2:
            state->noise.noise_type = FNL_NOISE_OPENSIMPLEX2;
            break;
        case NOISE_TYPE_CELLULAR:
            state->noise.noise_type = FNL_NOISE_CELLULAR;
            break;
        case NOISE_TYPE_PERLIN:
            state->noise.noise_type = FNL_NOISE_PERLIN;
            break;
        case NOISE_TYPE_VALUE_CUBIC:
            state->noise.noise_type = FNL_NOISE_VALUE_CUBIC;
            break;
        default:
            state->noise.noise_type = FNL_NOISE_OPENSIMPLEX2;
    }
    
    state->noise.seed = params->seed;
    state->noise.frequency = (float)params->frequency;
    
    // Set fractal settings
    switch (params->fractal_type) {
        case FRACTAL_TYPE_NONE:
            state->noise.fractal_type = FNL_FRACTAL_NONE;
            break;
        case FRACTAL_TYPE_FBM:
            state->noise.fractal_type = FNL_FRACTAL_FBM;
            break;
        case FRACTAL_TYPE_RIDGED:
            state->noise.fractal_type = FNL_FRACTAL_RIDGED;
            break;
        case FRACTAL_TYPE_PING_PONG:
            state->noise.fractal_type = FNL_FRACTAL_PINGPONG;
            break;
        default:
            state->noise.fractal_type = FNL_FRACTAL_NONE;
    }
    
    state->noise.octaves = params->octaves;
    state->noise.lacunarity = (float)params->lacunarity;
    state->noise.gain = (float)params->gain;
    state->noise.weighted_strength = (float)params->weighted_strength;
    state->noise.ping_pong_strength = (float)params->ping_pong_strength;
    
    // Set cellular settings
    switch (params->distance_function) {
        case CELLULAR_DISTANCE_EUCLIDEAN:
            state->noise.cellular_distance_func = FNL_CELLULAR_DISTANCE_EUCLIDEAN;
            break;
        case CELLULAR_DISTANCE_MANHATTAN:
            state->noise.cellular_distance_func = FNL_CELLULAR_DISTANCE_MANHATTAN;
            break;
        case CELLULAR_DISTANCE_HYBRID:
            state->noise.cellular_distance_func = FNL_CELLULAR_DISTANCE_HYBRID;
            break;
        default:
            state->noise.cellular_distance_func = FNL_CELLULAR_DISTANCE_EUCLIDEAN;
    }
    
    switch (params->return_type) {
        case CELLULAR_RETURN_CELL_VALUE:
            state->noise.cellular_return_type = FNL_CELLULAR_RETURN_CELLVALUE;
            break;
        case CELLULAR_RETURN_DISTANCE:
            state->noise.cellular_return_type = FNL_CELLULAR_RETURN_DISTANCE;
            break;
        case CELLULAR_RETURN_DISTANCE2:
            state->noise.cellular_return_type = FNL_CELLULAR_RETURN_DISTANCE2;
            break;
        case CELLULAR_RETURN_DISTANCE2_ADD:
            state->noise.cellular_return_type = FNL_CELLULAR_RETURN_DISTANCE2_ADD;
            break;
        case CELLULAR_RETURN_DISTANCE2_SUB:
            state->noise.cellular_return_type = FNL_CELLULAR_RETURN_DISTANCE2_SUB;
            break;
        case CELLULAR_RETURN_DISTANCE2_MUL:
            state->noise.cellular_return_type = FNL_CELLULAR_RETURN_DISTANCE2_MUL;
            break;
        case CELLULAR_RETURN_DISTANCE2_DIV:
            state->noise.cellular_return_type = FNL_CELLULAR_RETURN_DISTANCE2_DIV;
            break;
        default:
            state->noise.cellular_return_type = FNL_CELLULAR_RETURN_CELLVALUE;
    }
    
    state->noise.cellular_jitter_mod = (float)params->jitter;
    
    // Domain warp is more complex and requires a separate state
    // Let's implement basic domain warping directly
    
    printf("Initialized noise generator with seed %d and type %d\n", 
           params->seed, params->noise_type);
    
    return state;
}

void cleanup_noise_generator(NoiseState* state) {
    if (state) {
        free(state);
        printf("Cleaned up noise generator state.\n");
    }
}

static inline float get_raw_noise(NoiseState* state, float x, float y) {
     return fnlGetNoise2D(&(state->noise), x, y);
}

void generate_octave_noise_to_layer(NoiseState* state,
                                    int width, int height,
                                    double** target_layer,
                                    const NoiseParams* params)
{
    if (!state || !target_layer || !params) {
        fprintf(stderr, "Error: Invalid state, target_layer, or params provided.\n");
        return;
    }
    if (width <= 0 || height <= 0) {
         fprintf(stderr, "Error: Invalid dimensions provided.\n");
         return;
    }

    // For backward compatibility, use the old format
    int octaves = params->octaves;
    double persistence = params->gain; // Renamed to gain in new format
    double lacunarity = params->lacunarity;
    double base_frequency = params->frequency;
    bool use_ridged = (params->fractal_type == FRACTAL_TYPE_RIDGED);

    if (octaves < 1) octaves = 1;

	printf("Generating octave noise (%d octaves, persist=%.2f, lacun=%.2f, freq=%.4f, ridged=%s)...\n",
           octaves, persistence, lacunarity, base_frequency, use_ridged ? "true" : "false");

    double min_val = DBL_MAX;
    double max_val = -DBL_MAX;

    double max_possible_amplitude = 0.0;
    double current_amplitude = 1.0;
    for (int i = 0; i < octaves; i++) {
        max_possible_amplitude += current_amplitude;
        current_amplitude *= persistence;
    }
    printf("--> Calculated max_possible_amplitude: %.4f\n", max_possible_amplitude);

    if (max_possible_amplitude <= 1e-6) {
        max_possible_amplitude = 1.0;
        fprintf(stderr, "Warning: Max possible amplitude is near zero. Normalization may be inaccurate.\n");
    }

    for (int y = 0; y < height; y++) {
        if (!target_layer[y]) {
             fprintf(stderr, "Error: Target layer row %d is NULL.\n", y);
             continue;
        }
        for (int x = 0; x < width; x++) {
            float world_x = (float)x;
            float world_y = (float)y;
            double total_noise = 0.0;
            double amplitude = 1.0;
            double frequency = base_frequency;

            for (int i = 0; i < octaves; i++) {
                state->noise.frequency = (float)frequency;
                float noise_x = world_x;
                float noise_y = world_y;

                float noise_val = get_raw_noise(state, noise_x, noise_y);

                double octave_value;
                if (use_ridged) {
                    double pseudo_noise_01 = (noise_val * 0.5) + 0.5;
                    octave_value = 2.0 * (0.5 - fabs(0.5 - pseudo_noise_01));
                } else {
                    octave_value = noise_val;
                }

                total_noise += octave_value * amplitude;

                amplitude *= persistence;
                frequency *= lacunarity;
            }

            double normalized_noise;
            if (use_ridged) {
                normalized_noise = total_noise / max_possible_amplitude;
            } else {
                normalized_noise = (total_noise / max_possible_amplitude) * 0.5 + 0.5;
            }

            if (normalized_noise < 0.0) normalized_noise = 0.0;
            if (normalized_noise > 1.0) normalized_noise = 1.0;

            target_layer[y][x] = normalized_noise;

            if (normalized_noise < min_val) min_val = normalized_noise;
            if (normalized_noise > max_val) max_val = normalized_noise;
        }
    }
    printf("Octave noise generation complete.\n");
    printf("--> Actual value range generated: [%.4f, %.4f]\n", min_val, max_val);
}

void generate_cellular_noise_to_layer(NoiseState* state,
                                     int width, int height,
                                     double** target_layer,
                                     const NoiseParams* params)
{
    if (!state || !target_layer || !params) {
        fprintf(stderr, "Error: Invalid state, target_layer, or params provided.\n");
        return;
    }
    if (width <= 0 || height <= 0) {
         fprintf(stderr, "Error: Invalid dimensions provided.\n");
         return;
    }

    // Apply cellular settings
    state->noise.noise_type = FNL_NOISE_CELLULAR;
    state->noise.frequency = (float)params->frequency;
    
    // Set cellular distance function
    switch (params->distance_function) {
        case CELLULAR_DISTANCE_EUCLIDEAN:
            state->noise.cellular_distance_func = FNL_CELLULAR_DISTANCE_EUCLIDEAN;
            break;
        case CELLULAR_DISTANCE_MANHATTAN:
            state->noise.cellular_distance_func = FNL_CELLULAR_DISTANCE_MANHATTAN;
            break;
        case CELLULAR_DISTANCE_HYBRID:
            state->noise.cellular_distance_func = FNL_CELLULAR_DISTANCE_HYBRID;
            break;
    }
    
    // Set cellular return type
    switch (params->return_type) {
        case CELLULAR_RETURN_CELL_VALUE:
            state->noise.cellular_return_type = FNL_CELLULAR_RETURN_CELLVALUE;
            break;
        case CELLULAR_RETURN_DISTANCE:
            state->noise.cellular_return_type = FNL_CELLULAR_RETURN_DISTANCE;
            break;
        case CELLULAR_RETURN_DISTANCE2:
            state->noise.cellular_return_type = FNL_CELLULAR_RETURN_DISTANCE2;
            break;
        case CELLULAR_RETURN_DISTANCE2_ADD:
            state->noise.cellular_return_type = FNL_CELLULAR_RETURN_DISTANCE2_ADD;
            break;
        case CELLULAR_RETURN_DISTANCE2_SUB:
            state->noise.cellular_return_type = FNL_CELLULAR_RETURN_DISTANCE2_SUB;
            break;
        case CELLULAR_RETURN_DISTANCE2_MUL:
            state->noise.cellular_return_type = FNL_CELLULAR_RETURN_DISTANCE2_MUL;
            break;
        case CELLULAR_RETURN_DISTANCE2_DIV:
            state->noise.cellular_return_type = FNL_CELLULAR_RETURN_DISTANCE2_DIV;
            break;
    }
    
    state->noise.cellular_jitter_mod = (float)params->jitter;
    
    // Set fractal type
    if (params->fractal_type != FRACTAL_TYPE_NONE) {
        switch (params->fractal_type) {
            case FRACTAL_TYPE_FBM:
                state->noise.fractal_type = FNL_FRACTAL_FBM;
                break;
            case FRACTAL_TYPE_RIDGED:
                state->noise.fractal_type = FNL_FRACTAL_RIDGED;
                break;
            case FRACTAL_TYPE_PING_PONG:
                state->noise.fractal_type = FNL_FRACTAL_PINGPONG;
                break;
            default:
                state->noise.fractal_type = FNL_FRACTAL_NONE;
        }
        
        state->noise.octaves = params->octaves;
        state->noise.lacunarity = (float)params->lacunarity;
        state->noise.gain = (float)params->gain;
        
        if (params->fractal_type == FRACTAL_TYPE_PING_PONG) {
            state->noise.ping_pong_strength = (float)params->ping_pong_strength;
        }
    } else {
        state->noise.fractal_type = FNL_FRACTAL_NONE;
    }

    // Set domain warp if needed
    if (params->use_domain_warp) {
        // We need a separate state for domain warping
        printf("Warning: Domain warping requires manual implementation, skipping for now\n");
    }

    printf("Generating cellular noise (freq=%.4f, jitter=%.2f, dist_func=%d, return_type=%d)...\n",
           params->frequency, params->jitter, params->distance_function, params->return_type);
    
    double min_val = DBL_MAX;
    double max_val = -DBL_MAX;
    
    // Generate the noise
    for (int y = 0; y < height; y++) {
        if (!target_layer[y]) {
             fprintf(stderr, "Error: Target layer row %d is NULL.\n", y);
             continue;
        }
        for (int x = 0; x < width; x++) {
            float noise_val = get_raw_noise(state, (float)x, (float)y);
            
            // Convert to 0-1 range (FNL outputs -1 to 1 for some noise types)
            double normalized_noise = (noise_val * 0.5) + 0.5;
            
            // Clamp to valid range
            if (normalized_noise < 0.0) normalized_noise = 0.0;
            if (normalized_noise > 1.0) normalized_noise = 1.0;
            
            target_layer[y][x] = normalized_noise;
            
            if (normalized_noise < min_val) min_val = normalized_noise;
            if (normalized_noise > max_val) max_val = normalized_noise;
        }
    }
    
    printf("Cellular noise generation complete.\n");
    printf("--> Actual value range generated: [%.4f, %.4f]\n", min_val, max_val);
}

float get_noise_value(NoiseState* state, float x, float y) {
     if (!state) return 0.0f;
     return fnlGetNoise2D(&(state->noise), x, y);
}

NoiseParams create_cellular_default_params() {
    NoiseParams params;
    
    // General settings from JSON
    params.noise_type = NOISE_TYPE_CELLULAR;
    params.seed = 1337;
    params.frequency = 0.015;
    
    // Fractal settings from JSON
    params.fractal_type = FRACTAL_TYPE_NONE;
    params.octaves = 3;
    params.lacunarity = 2.0;
    params.gain = 0.5;  // Same as persistence
    params.weighted_strength = 0.0;
    params.ping_pong_strength = 2.0;
    
    // Cellular settings from JSON
    params.distance_function = CELLULAR_DISTANCE_HYBRID;
    params.return_type = CELLULAR_RETURN_CELL_VALUE;
    params.jitter = 1.0;
    
    // Domain warp settings from JSON
    params.use_domain_warp = true;
    params.domain_warp_type = NOISE_TYPE_OPENSIMPLEX2;
    params.domain_warp_amplitude = 100.0;
    params.domain_warp_frequency = 0.01;
    params.domain_warp_fractal_type = FRACTAL_TYPE_DOMAIN_WARP_INDEPENDENT;
    params.domain_warp_octaves = 3;
    params.domain_warp_lacunarity = 2.0;
    params.domain_warp_gain = 0.5;
    params.domain_warp_seed = 1337;
    
    return params;
}
